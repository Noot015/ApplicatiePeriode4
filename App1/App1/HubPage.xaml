<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.HubPage"
             BackgroundImage="hubBackround.png">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- header background -->
            <BoxView BackgroundColor="Blue" Grid.Row="0" HeightRequest="100" />
            

            <!-- body background -->
            <BoxView BackgroundColor="Red" Grid.Row="1" />

            <!-- page background -->
            <BoxView BackgroundColor="Green" HorizontalOptions="Start" VerticalOptions="Start" TranslationY="50" />
            
            



        </Grid>

    </ContentPage.Content>
</ContentPage>